# ==================================================================================== #
# ENTRYPOINT
# ==================================================================================== #

.PHONY: all
all: check helm oci

# ==================================================================================== #
# BUILD
# ==================================================================================== #

.PHONY: check
check:
	@scripts/get-modified-charts.sh

.PHONY: helm
helm:
	@scripts/package-helm.sh

.PHONY: oci
oci:
	@scripts/package-oci.sh

# ==================================================================================== #
# HELPERS
# ==================================================================================== #

## help: print this help message
.PHONY: help
help:
	@echo 'Usage:'
	@sed -n 's/^##//p' ${MAKEFILE_LIST} | column -t -s ':' |  sed -e 's/^/ /'
